<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_gps_fixed_black_24dp"
            android:text="Xác định tọa độ khách hàng"
            android:textColor="@android:color/black"
            android:id="@+id/button4"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="Xác định tọa độ khách hàng" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_flight_land_black_36dp"
            android:text="Viếng Thăm"
            android:lines="2"
            android:textColor="@android:color/black"
            android:id="@+id/flatButton"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_camera_alt_black_36dp"
            android:layout_weight="3"
            android:text="Chụp Hình"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_shopping_basket_black_36dp"
            android:text="Bán Hàng"
            android:layout_weight="3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/button"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_redeem_black_36dp"
            android:text="Hàng Tồn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/button3" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_power_settings_new_black_36dp"
            android:text="Rời Khỏi"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/button2" />

    </LinearLayout>
</LinearLayout>