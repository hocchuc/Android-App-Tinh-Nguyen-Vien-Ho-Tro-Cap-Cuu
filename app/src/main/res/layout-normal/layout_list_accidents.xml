<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/imgVAC"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/txtAddess_Ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/imgVAC"
            android:layout_toRightOf="@+id/imgVAC"
            android:breakStrategy="balanced"
            android:text="TextView"
            android:textSize="14dp"
            android:textStyle="bold"
            android:inputType="textMultiLine"
            card_view:layout_constraintLeft_toRightOf="@+id/imgVAC"
            android:layout_marginLeft="16dp"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0" />
        <TextView
            android:id="@+id/txtDate_AC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtAddess_Ac"
            android:layout_alignStart="@+id/txtAddess_Ac"
            android:layout_below="@+id/txtAddess_Ac"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:breakStrategy="balanced"
            android:inputType="textMultiLine"
            android:text="TextView"
            card_view:layout_constraintLeft_toRightOf="@+id/imgVAC"
            card_view:layout_constraintTop_toBottomOf="@+id/txtAddess_Ac" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/floatingActionButton"
            android:layout_toEndOf="@+id/txtDes_AC"
            android:layout_toRightOf="@+id/txtDes_AC"
            android:text="TextView"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            card_view:layout_constraintLeft_toRightOf="@+id/txtDes_AC"
            android:layout_marginLeft="16dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/txtDes_AC"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtDate_AC"
            android:layout_alignStart="@+id/txtDate_AC"
            android:layout_alignTop="@+id/txtStatus"
            android:text="TextView"
            card_view:layout_constraintLeft_toRightOf="@+id/imgVAC"
            android:layout_marginLeft="16dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtDate_AC"
            android:clickable="true"
            card_view:fabSize="mini"
            card_view:srcCompat="@drawable/ic_menu_send"
            android:layout_marginRight="16dp"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            card_view:layout_constraintLeft_toRightOf="@+id/txtStatus"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintHorizontal_bias="1.0" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>